{% extends 'base.html.twig' %}

{% block title %}
    Mój profil
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="page-header">
                <h1>
                    Mój profil
                </h1>
            </div>
            <hr>
        </div>
        {% if form %}
            <div class="row">
                {{ form_start(form) }}
                {{ form_row(form.firstName) }}
                {{ form_row(form.surname) }}
                {{ form_row(form.nickname) }}
                {{ form_row(form.country) }}
                {{ form_row(form.www) }}
                {{ form_row(form.fb) }}
                {{ form_row(form.instagram) }}
                {{ form_row(form.twitter) }}
                {{ form_row(form.sponsors) }}
                <br>
                <button type="submit" class="btn btn-md btn-primary">Aktualizuj</button>
                {{ form_end(form) }}
            </div>
        {% else %}
            <p class="lead">
                Profile awaiting verification.
            </p>
        {% endif %}
    </div>
    <br><br>
{% endblock %}
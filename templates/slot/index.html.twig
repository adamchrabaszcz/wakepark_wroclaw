{% extends 'base.html.twig' %}

{% block title %}Slot index{% endblock %}

{% block body %}
    <a href="{{ path('app_slot_new') }}">Create new booking</a>

    <div id="calendar-holder"></div>

    <h1>Slot index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>BeginAt</th>
                <th>Price</th>
                <th>EndAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for slot in slots %}
            <tr>
                <td>{{ slot.id }}</td>
                <td>{{ slot.beginAt ? slot.beginAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ slot.price }}</td>
                <td>{{ slot.endAt ? slot.endAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_slot_show', {'id': slot.id}) }}">show</a>
                    <a href="{{ path('app_slot_edit', {'id': slot.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_slot_new') }}">Create new</a>
{% endblock %}
